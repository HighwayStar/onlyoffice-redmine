<h2>{{ title }}</h2>
<div class="box attachments">
  <table>
    <tbody>
      <tr>
        <td>
          <span class="icon icon-attachment">{{ attachment.basename }}</span>
          <span class="size">({{ attachment.size }})</span>
          <span class="author">{{ attachment.author }}, {{ attachment.create_on }}</span>
        </td>
      </tr>
    </tbody>
  </table>
</div>
{{# form_tag }}
<div class="box tabular">
  <p>
    <label for="onlyoffice-attachment-name">{{ attachment.name.label }}</label>
    <input id="onlyoffice-attachment-name" name="{{ attachment.name.name }}" size="60" value="{{ attachment.name.value }}" required>
  </p>
  <p>
    <label for="onlyoffice-attachment-description">{{ attachment.description.label }}</label>
    <input id="onlyoffice-attachment-description" name="{{ attachment.description.name }}" size="60" value="{{ attachment.description.value }}">
  </p>
  <p class="hidden">
    <label for="onlyoffice-attachment-from">{{ attachment.from.label }}</label>
    <select id="onlyoffice-attachment-from" name="{{ attachment.from.name }}" required>
      <option value="{{ attachment.from.value }}" selected></option>
    </select>
  </p>
  <p>
    <label for="onlyoffice-attachment-to">{{ attachment.to.label }}</label>
    <select id="onlyoffice-attachment-to" name="{{ attachment.to.name }}" required>
      {{# attachment.to.options }}
      <option value="{{ value }}" {{# selected }} selected {{/ selected }}>{{ label }}</option>
      {{/ attachment.to.options }}
    </select>
  </p>
</div>
<div class="version-overview">
  {{> _blocks/progress }}
</div>
<br>
<p>
  {{# save }}
  <input data-url="{{ save.url }}" type="submit" value="{{ save.label }}">
  {{/ save }}
  <input data-url="{{ download.url }}" type="submit" value="{{ download.label }}">
  <a href="{{ cancel.url }}">{{ cancel.label }}</a>
</p>
{{/ form_tag }}
