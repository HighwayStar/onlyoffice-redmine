<%= render :parent %>

<div style="display:none;">
<%
  attachment_id = request.original_url[request.original_url.rindex("/") + 1, request.original_url.length]
  attachment = Attachment.find(attachment_id)
  user = User.current
  project_is_not_readonly = @project.status != 5
  edit_permission = (DocumentHelper.is_editable(attachment) &&
    (DocumentHelper.permission_to_edit_file(user, attachment.project, attachment.container_type) || user.admin)) && project_is_not_readonly

  ext = attachment.filename[attachment.filename.index(".")+1..]
  is_conversion = FormatUtility.format_supported(ext).length > 0 ? true : false
%>
</div>

<%= render :partial => 'onlyoffice_convert/downloadas', :locals => {:file_id => attachment_id} %>

<%= javascript_include_tag "onlyofficeCreateConvertButton", :plugin => "onlyoffice_redmine" %>

<script type="text/javascript" language="javascript">
  var text = "<%= edit_permission ? l(:edit_in_onlyoffice) : l(:open_in_onlyoffice) %>";
  var image = 'url(/plugin_assets/onlyoffice_redmine/images/onlyoffice.ico)';
  createConvertButton(true, text, image);

  <% if is_conversion %>
    text = "<%= l(:onlyoffice_convert_download_file_as) %>";
    image = 'url(/plugin_assets/onlyoffice_redmine/images/download_as.svg)';
    createConvertButton(false, text, image);
  <% end %>
</script>
