<h2>{{ title }}</h2>
<div class="box attachments">
  <table>
    <tbody>
      <tr>
        <td>
          <span class="icon icon-attachment">{{ input_basename }}</span>
          <span class="size">({{ input_size }})</span>
          <span class="author">{{ input_author }}, {{ input_create_on }}</span>
        </td>
      </tr>
    </tbody>
  </table>
</div>
{{# helpers_form_tag }}
<div class="box tabular">
  <!-- The type is required but it's set when submitting -->
  <input id="onlyoffice-type" class="hidden" name="{{ type_name }}">
  <input class="hidden" name="{{ input_id_name }}" value="{{ input_id_value }}" required>
  <input class="hidden" name="{{ page_id_name }}" value="{{ page_id_value }}" required>
  <input class="hidden" name="{{ page_type_name }}" value="{{ page_type_value }}" required>
  <p>
    <label for="onlyoffice-output-name">{{ output_name_label }}</label>
    <input id="onlyoffice-output-name" name="{{ output_name_name }}" size="60" value="{{ output_name_value }}" required>
  </p>
  <p class="hidden">
    <label for="onlyoffice-input-type">{{ input_type_label }}</label>
    <select id="onlyoffice-input-type" name="{{ input_type_name }}" required>
      <option value="{{ input_type_value }}" selected></option>
    </select>
  </p>
  <p>
    <label for="onlyoffice-output-type">{{ output_type_label }}</label>
    <select id="onlyoffice-output-type" name="{{ output_type_name }}" required>
      <option value="">{{ output_type_placeholder }}</option>
      {{# output_type_options }}
      <option value="{{ . }}">{{ . }}</option>
      {{/ output_type_options }}
    </select>
  </p>
</div>
<div class="version-overview">
  {{> _blocks/progress }}
</div>
<br>
<p>
  {{# save_url }}
  <input data-type="{{ type_save_value }}" data-url="{{ save_url }}" type="submit" value="{{ save_label }}">
  {{/ save_url }}
  <input data-type="{{ type_download_value }}" data-url="{{ download_url }}" type="submit" value="{{ download_label }}">
  {{# cancel_url }}
  <a href="{{ cancel_url }}">{{ cancel_label }}</a>
  {{/ cancel_url }}
</p>
{{/ helpers_form_tag }}
